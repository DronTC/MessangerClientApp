<Window x:Class="MessangerClientApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" 
        Background="Transparent"
        MouseLeftButtonDown="Window_MouseDown"
        WindowStyle="None">
    <Window.Resources>
    </Window.Resources>
    <Border CornerRadius="25" Background="#242582">
        <Border.Clip>
            <RectangleGeometry Rect="0,0,800,450" 
                               RadiusX="15" RadiusY="15"/>
        </Border.Clip>
        <Grid ClipToBounds="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel Grid.ColumnSpan="2"
                        Background="#2F2FA2"
                        Orientation="Horizontal"
                        FlowDirection="RightToLeft">
                <Button Content="X" 
                        Style="{StaticResource SystemButton}"
                        Click="CloseButton_Click"/>
                <Button Content="-" 
                        Style="{StaticResource SystemButton}"
                        Click="ResizeButton_Click"/>
                <Button Style="{StaticResource SystemButton}"
                        Click="MaximizedButton_Click"/>
            </StackPanel>
            <Frame x:Name="MainFrame"
                   Grid.Column="0" 
                   Grid.Row="1"
                   NavigationUIVisibility="Hidden"/>
            <Frame x:Name="ChatFrame"
                   Grid.Column="1" 
                   Grid.Row="1"
                   NavigationUIVisibility="Hidden"/>
            <Frame x:Name="FullScreenFrame"
                   Grid.Row="1"
                   Grid.ColumnSpan="2"
                   NavigationUIVisibility="Hidden"/>
        </Grid>
    </Border>
</Window>
