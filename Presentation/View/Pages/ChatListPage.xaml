<Page x:Class="MessangerClientApp.Presentation.View.Pages.ChatListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:uc="clr-namespace:MessangerClientApp.Presentation.UserControls" 
      xmlns:local="clr-namespace:MessangerClientApp.Presentation.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChatsPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.4*"/>
            <ColumnDefinition Width="0.6*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0"
              Background="#2D2D2D">
            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Чаты" 
                       Foreground="White"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="16,8"/>

            <ItemsControl Grid.Row="1" 
                          ScrollViewer.VerticalScrollBarVisibility="Disabled"
                          Background="#121212">
                <ItemsControl.Resources>
                    <Style TargetType="ListViewItem">
                        <Setter Property="IsSelected" Value="False"/>
                    </Style>
                </ItemsControl.Resources>
            </ItemsControl>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition Height="0.85*"/>
                <RowDefinition Height="0.1*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Background="#2D2D2D">
                <TextBlock Text="{Binding ChatNameValue}" FontSize="20"
                           FontWeight="Bold"
                           Margin="16,8" Foreground="White"
                           HorizontalAlignment="Left"/>
            </Grid>
            <ItemsControl Name="ChatListView" ScrollViewer.VerticalScrollBarVisibility="Disabled"
                  Grid.Row="1" Background="#2A2A2A" ItemsSource="{Binding Chat.Messages}">
                <ItemsControl.Resources>
                    <Style TargetType="ListViewItem">
                        <Setter Property="IsSelected" Value="False"/>
                    </Style>
                </ItemsControl.Resources>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <uc:MessageItemControl DataContext="{Binding}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Grid Grid.Row="2" Margin="5"
                  Background="#252525">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.9*"/>
                    <ColumnDefinition Width="0.1*"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0"
                     Text="{Binding TextBoxValue, UpdateSourceTrigger=PropertyChanged}" FontSize="14" VerticalContentAlignment="Center"
                     Background="Transparent" Foreground="White">
                </TextBox>
                <Button Grid.Column="1" Margin="5" Command="{Binding SendMessageCommand}"/>
            </Grid>
        </Grid>
    </Grid>
</Page>
